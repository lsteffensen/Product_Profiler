<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
       
        <td><img src="<%= product.url %>" height="300" width="300" overflow:hidden></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.formatted_price %></td>
        <td><button><%= link_to 'Show', product %></button></td>
        <td><button><%= link_to 'Edit', edit_product_path(product) %></button></td>
        <td><button><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td></button>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Product', new_product_path %></button>
